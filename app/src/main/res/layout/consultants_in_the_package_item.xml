<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:id="@+id/consultantLayout"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">

            <digital.upbeat.estisharati_user.Utils.CircleImageView
                android:id="@+id/consultantImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="3dp"
                android:src="@drawable/ic_temp_profile"
                app:civ_border_color="@color/white"
                app:civ_border_width="0.5dp" />

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_parrot_green"
                android:elevation="4dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:id="@+id/consultantName"
            android:fontFamily="@font/almarai_regular"
            android:text="Abdin Al-Farraj"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>

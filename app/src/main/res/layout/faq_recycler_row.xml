<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/corner_redius_5dp_white"
    android:elevation="3dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/faq_parentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/faq_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/almarai_regular"
            android:text="How to Register ?"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/faq_arrow"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_right_arrow_black" />

    </RelativeLayout>

    <TextView
        android:id="@+id/faq_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/almarai_regular"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:text="Free online translation from Arabic into English and back, Arabic-English dictionary with transcription, pronunciation"
        android:textColor="@color/black_light"
        android:textSize="15sp"
        android:visibility="gone" />


</LinearLayout>
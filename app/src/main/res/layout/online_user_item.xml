<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="25dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/user_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="60dp">

            <digital.upbeat.estisharati_user.Utils.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_temp_profile" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_necktie" />

            <View
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:background="@drawable/round_parrot_green" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/almarai_regular"
            android:singleLine="true"
            android:gravity="center"
            android:text="Elias Al Abbas"
            android:textSize="9sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/all_btn"
        android:visibility="gone"
        android:layout_width="60dp"
        android:layout_marginTop="5dp"
        android:layout_height="60dp"
        android:background="@drawable/round_light_green1"
        android:fontFamily="@font/almarai_regular"
        android:gravity="center"
        android:text="ALL"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>

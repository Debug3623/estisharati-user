<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="4dp"
        android:background="@drawable/corner_redius_5dp_white"
        android:orientation="horizontal"
        android:padding="10dp">

        <digital.upbeat.estisharati_user.Utils.CircleImageView
            android:id="@+id/profilePicture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_temp_profile"
            app:civ_border_color="@color/parrot_green"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/almarai_regular"
                android:text="Taliha Al-Jaber"
                android:id="@+id/userName"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/almarai_regular"
                android:text="1 months ago"
                android:id="@+id/createdAt"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="12sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/almarai_regular"
                android:text="Taliha Al-Jaber"
                android:id="@+id/comment"
                android:textAlignment="viewStart"
                android:textColor="@color/black_light"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
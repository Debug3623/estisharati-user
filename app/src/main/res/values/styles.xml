<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomCirclePageIndicators">
        <item name="fillColor">#411e25</item>
        <item name="strokeColor">#ececec</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">4dp</item>
        <item name="centered">false</item>
    </style>

    <style name="StyledIndicators_sell_items" parent="@android:style/Theme.Light">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicators</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="estisharati.bussiness.eshtisharati_consultants">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".ForgetPasswordActivity"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".UI.SplashTemp"
            android:exported="false"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="OPEN_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.MyAppointment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.GroupChatPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Pages"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.VideoCall"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.VoiceCall"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.IncomingCall"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.ChatPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.PhotoViewer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.MyProfileUpdate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.MyProfile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.NotificationDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Notifications"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.ConsultantDrawer"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="NotificationClick" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UI.ForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".UI.SplashScreen"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/orange" />

        <service
            android:name="estisharati.bussiness.eshtisharati_consultants.Utils.FCMService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>